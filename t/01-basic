use Test;
use EDT-TZ;

plan 7;

# fixtures
constant dt = -4 * 60 * 60;
constant name = 'EDT';
constant tz = name;
my $tz = EDT-TZ.new();

is($tz.name, name, 'name');
is($tz.abbreviation(), tz, 'abbr');
is($tz.abbreviation(time), 'EDT', 'abbr w/ arg');
is(~$tz, tz, ".Str()");
is($tz.utc-offset-in-seconds(), dt, 'dt');
is(+$tz, dt, ".Numeric()");
is($tz.Int, dt, ".Int()");
